<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3b577e</item>
        <item name="colorPrimaryDark">#3b577e</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButtonSign" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorRaisedButtonBackground</item>
        <item name="android:textColor">@color/colorRaisedButtonText</item>
    </style>

    <style name="RaisedButtonAcount" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorRaisedButtonBackgroundAcount</item>
        <item name="android:textColor">@color/colorRaisedButtonText</item>
    </style>

    <style name="RaisedButtonRecomendation" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorRaisedButtonBackgroundReomendation</item>
        <item name="android:textColor">@color/colorRaisedButtonText</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorFlatButtonText </item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
