<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButtonSign" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorRaisedButtonBackground</item>
        <item name="android:textColor">@color/colorRaisedButtonText</item>
    </style>

    <style name="RaisedButtonAcount" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorRaisedButtonBackgroundAcount</item>
        <item name="android:textColor">@color/colorRaisedButtonText</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorFlatButtonText </item>
    </style>

</resources>
